<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context="com.example.ahmed.chat.fragments.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_talk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/borderprimary"
            android:text="Say What you want" />

        <Button
            android:id="@+id/btn_listen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/borderprimary"
            android:text="Listen" />
    </LinearLayout>

    <com.tuyenmonkey.mkloader.MKLoader
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_cancelrequest"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:id="@+id/mkloader"
        app:mk_color="@color/colorAccent"
        app:mk_type="Worm" />

    <Button
        android:id="@+id/btn_cancelrequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:enabled="false"
        android:layout_margin="20dp"
        android:background="@drawable/border"
        android:text="Cancel Request" />
</RelativeLayout>
